<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8E4E4"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="400sp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/willkomen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_msg"
        android:layout_below="@+id/logo"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#013d62"
        />
    <TextView
        android:id="@+id/wtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg"
        android:layout_marginTop="30sp"
        android:padding="25sp"
        android:layout_below="@+id/willkomen_text"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#013d62"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notiz"
        android:layout_marginTop="30sp"
        android:padding="10sp"
        android:layout_below="@+id/wtext"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#013d62"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prof"
        android:gravity="right"
        android:paddingRight="30sp"
        android:textColor="#013d62"/>
        />

    <LinearLayout
        android:id="@+id/horizo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_below="@+id/text2"
        android:orientation="horizontal"
        android:weightSum="2">

                <Button
                    android:id="@+id/btn_deutsch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deutsch"
                    android:background="#EADFDF"
                    android:layout_marginHorizontal="10sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_marokkanisch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marokannisch"
                    android:background="#EADFDF"
                    android:layout_marginHorizontal="10sp"
                    android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizo"
        android:text="@string/dank_text"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:background="#fff"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:padding="4sp"
            android:background="#000"
            android:text="@string/copyright"/>


    </LinearLayout>

</RelativeLayout>